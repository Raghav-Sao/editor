        "js-cookie": "^2.2.0",
        "node-sass-chokidar": "^1.3.0",
        "npm-run-all": "^4.1.3",
        "prop-types": "^15.7.2",
        "react": "^16.4.0",
        "react-color": "^2.14.1",
        "react-dnd": "^4.0.4",
        "react-dnd-html5-backend": "^4.0.4",
        "react-dom": "^16.4.0",
        "react-lazyload": "^2.3.0",
        "react-redux": "^5.0.7",
